# ============================================================================
# CONFIGURACIÃ“N DEL PROYECTO AI SAAS OFFLINE
# ============================================================================

# SERVIDOR
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG=True
LOG_LEVEL=INFO

# OLLAMA
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODELS=deepseek-r1:7b,qwen2:7b,llama2:7b,mistral:7b

# MODELOS DE IA
DEFAULT_MODEL=deepseek-r1:7b
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
RERANKER_MODEL=jina-reranker-v1-base-en

# STABLE DIFFUSION
STABLE_DIFFUSION_MODEL=stabilityai/stable-diffusion-xl-base-1.0
STABLE_DIFFUSION_DEVICE=cuda
STABLE_DIFFUSION_PRECISION=fp16

# WHISPER (Speech-to-Text)
WHISPER_MODEL=medium
WHISPER_DEVICE=cuda

# PIPER (Text-to-Speech)
PIPER_MODEL=en_US-glow_tts-medium
PIPER_DEVICE=cpu

# BASE DE DATOS
DATABASE_URL=sqlite:///./ai_saas.db
# Para PostgreSQL: postgresql://user:password@localhost/ai_saas

# ALMACENAMIENTO
STORAGE_TYPE=local
STORAGE_PATH=./storage
# Para S3: s3://bucket-name

# SEGURIDAD
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# GITHUB
GITHUB_TOKEN=your-github-token
GITHUB_USERNAME=your-github-username

# REDES SOCIALES
INSTAGRAM_ACCESS_TOKEN=your-instagram-token
TIKTOK_ACCESS_TOKEN=your-tiktok-token
YOUTUBE_API_KEY=your-youtube-api-key
TWITTER_API_KEY=your-twitter-api-key
LINKEDIN_ACCESS_TOKEN=your-linkedin-token

# STRIPE (Para pagos)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLIC_KEY=your-stripe-public-key

# CORREO
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# SENTRY (Error tracking)
SENTRY_DSN=your-sentry-dsn

# ANALYTICS
MIXPANEL_TOKEN=your-mixpanel-token
AMPLITUDE_API_KEY=your-amplitude-api-key

# FEATURE FLAGS
ENABLE_VOICE_CLONING=true
ENABLE_VIDEO_GENERATION=true
ENABLE_MARKETPLACE=false
ENABLE_REVENUE_ENGINE=false

# PERFORMANCE
MAX_WORKERS=4
BATCH_SIZE=32
CACHE_TTL=3600

# OFFLINE
OFFLINE_MODE=true
SYNC_INTERVAL=30
CONFLICT_RESOLUTION_STRATEGY=last-write-wins
